generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id         String @id @default(uuid())
  email      String @unique
  first_name String ?
  last_name  String ?

  Password Password?
}

model Password {
  id        String  @id @default(uuid())
  salt      String
  hash      String
  Account   Account @relation(fields: [accountId], references: [id])
  accountId String  @unique
}
